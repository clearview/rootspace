{
  "name": "root",
  "version": "1.0.0",
  "description": "Root app",
  "main": "src/index.ts",
  "author": "ihti",
  "license": "Unlicensed",
  "private": true,
  "scripts": {
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc --project tsconfig.json",
    "postbuild": "rsync -r ./src/templates/ ./dist/templates/",
    "dev:debug": "ts-node-dev --inspect=0.0.0.0:9229 --respawn src/index.ts",
    "queue:process": "ts-node-dev --inspect=0.0.0.0:9230 --respawn src/queueProcessor.ts",
    "tslint": "tslint -p tsconfig.json -c tslint.json 'src/**/*.ts'",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop",
    "schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync",
    "cli": "ts-node ./cli.ts",
    "test": "jest"
  },
  "dependencies": {
    "@casl/ability": "^4.1.5",
    "@sendgrid/mail": "^7.0.0",
    "@sentry/node": "5.18.1",
    "@sindresorhus/slugify": "^1.0.0",
    "aws-sdk": "^2.673.0",
    "basic-auth": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "bull": "^3.16.0",
    "bull-arena": "^2.8.1",
    "chalk": "^4.1.0",
    "class-validator": "^0.12.2",
    "commander": "^6.0.0",
    "compress": "^0.99.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-promise-router": "^3.0.3",
    "http-request-context": "^0.3.1",
    "indicative": "^7.4.4",
    "ioredis": "^4.16.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "nanoid": "^3.1.10",
    "node-config-ts": "^3.0.4",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.0.0",
    "pug": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.24",
    "typeorm-seeding": "^1.6.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bull": "^3.14.0",
    "@types/bull-arena": "^2.6.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/faker": "^4.1.12",
    "@types/ioredis": "^4.14.9",
    "@types/jest": "^25.2.3",
    "@types/multer": "^1.4.3",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^13.9.8",
    "@types/passport": "^1.0.3",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/pug": "^2.0.4",
    "@types/validator": "^13.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "nodemailer": "^6.4.8",
    "supertest": "^4.0.2",
    "testcontainers": "^2.10.0",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.8.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.1",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn tslint",
      "pre-push": "yarn tslint"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
